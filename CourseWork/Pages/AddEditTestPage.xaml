<Page x:Class="CourseWork.Pages.AddEditTestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CourseWork.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="1000"
      Title="Добавление теста">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <TextBlock Style="{StaticResource BlockCommon}" Text="Номер задания" TextAlignment="Left"></TextBlock>
                <ComboBox Name="taskBox" Width="150"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Style="{StaticResource BlockCommon}" Text="Входные данные"></TextBlock>
                <TextBox Name="TBoxInput" Width="150"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Style="{StaticResource BlockCommon}" Text="Выходные данные"></TextBlock>
                <TextBox Name="TBoxOutput" Width="150"></TextBox>
            </StackPanel>
            <Button Name="BtnSave" Click="BtnSave_Click" Content="Coxpанить"></Button>
        </StackPanel>
    </Grid>
</Page>
