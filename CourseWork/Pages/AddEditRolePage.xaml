<Page x:Class="CourseWork.Pages.AddEditRolePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CourseWork.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="1000"
      Title="Добавление роли">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Style="{StaticResource BlockCommon}" Text="Название"></TextBlock>
                <TextBox Name="TBoxName" TextChanged="TBoxName_TextChanged"></TextBox>
            </StackPanel>
            <TextBlock Name="nameError" Style="{StaticResource ErrorMessage}" Text="Роль с данным названием уже существует" Visibility="Collapsed"></TextBlock>
            <Button Name="BtnSave" Click="BtnSave_Click" Content="Coxpанить"></Button>
        </StackPanel>
    </Grid>
</Page>
